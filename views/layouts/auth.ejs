<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Title -->
    <title>
      <%= typeof title !='undefined' ? title: 'Untitled Page' %> | <%=
      process.env.TITLE %>
    </title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="" type="image/x-icon" />
    <!-- Bootstrap 5.1 -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    />
    <!-- Fontawesome 5.10.0 -->
    <link
      rel="stylesheet"
      href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
    />
    <!-- Jquery 3.6.0 -->
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Stylesheet -->
    <link rel="stylesheet" href="/public/css/auth.css" />
  </head>

  <body>
    <!-- Bootstrap Toast -->
    <div class="position-fixed top-0 end-0 p-3" style="z-index: 999">
      <!-- Toast Container -->
      <div class="toast-container" id="toastContainer">
        <!-- errors toast -->
        <% if(typeof errorMessage != 'undefined') { %> <% if(errorMessage.length
        > 0) { %> <% for(i=0; i < errorMessage.length; i++) { %>
        <div
          class="toast align-items-center danger"
          role="alert"
          aria-live="assertive"
          aria-atomic="true"
          data-bs-delay="50000"
        >
          <div class="d-flex">
            <div class="toast-body">
              <i class="fa fa-times-circle"></i> <%= errorMessage[i] %>
            </div>
            <button
              type=""
              class="btn-close me-2 m-auto toast-close"
              data-bs-dismiss="toast"
              aria-label="Close"
            ></button>
          </div>
        </div>
        <% } %> <% } %> <% } %>

        <!-- success toast -->
        <% if(typeof successMessage != 'undefined') { %> <%
        if(successMessage.length > 0) { %> <% for(i=0; i <
        successMessage.length; i++) { %>
        <div
          class="toast align-items-center success"
          role="alert"
          aria-live="assertive"
          aria-atomic="true"
          data-bs-delay="50000"
        >
          <div class="d-flex">
            <div class="toast-body">
              <i class="fa fa-check-circle"></i> <%= successMessage[i] %>
            </div>
            <button
              type=""
              class="btn-close me-2 m-auto toast-close"
              data-bs-dismiss="toast"
              aria-label="Close"
            ></button>
          </div>
        </div>
        <% } %> <% } %> <% } %>
      </div>
    </div>

    <%- body %>

    <script>
      $(document).ready(function () {
        $(".toast").toast("show");
      });
    </script>
  </body>
</html>
